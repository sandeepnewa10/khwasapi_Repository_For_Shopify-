{% case media.media_type %}
    {% when 'image' %}
        <img
              class="w-full h-full object-cover "
              src="{{ media | img_url: '300x' }}"
              srcset="{% render 'bgset', image: media %}"
              sizes="(min-width: 981px) 50vw, 100vw"
              width="300"
              height="{{ 300 | divided_by: media.aspect_ratio | round }}"
              alt="{{ media.preview_image.alt }}" />
    {% when 'external_video' %}
        {{ media |  external_video_tag: class:'w-full h-80 object-cover' }}
    {% when 'video' %}
        {{ media |  video_tag:  controls:true, class:'w-full h-full object-cover' }}
    {% when 'model' %}
        {{ media |  model_viewer_tag}}
    {% else %}
    {{ media |  media_tag }}        
{% endcase %}









